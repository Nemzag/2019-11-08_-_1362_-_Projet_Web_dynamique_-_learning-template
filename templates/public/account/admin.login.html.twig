{% extends 'base.html.twig' %}

    {% block title %}{{ parent() }}Accès à l'administration{% endblock %}

    {% block main %}

        <div class = "container" style = "min-height: 70vh;" >

            <div class="row">
                <div class = "col-md-4 offset-md-4" >
                    <h2 class = "my-4" >Accès à l'administration</h2 >
                    {% if error %}
                        <div class = "alert alert-danger" >Nom d'utilisateur ou mot de passe erronés</div >
                    {% endif %}
                    <form action = "{{ path('admin_account_login') }}" method = "post" >
                        <div class = "form-group" >
                            <label for = "mail" >Votre E‑Mail</label >
                            <input type = "email" class = "form-control" required name = "_username" placeholder = "E‑Mail (taper : patrick@domain.ext)" id = "mail" value = "{{ last_username }}" >
                        </div >
                        <div class = "form-group" >
                            <label for = "pass" >Votre mot de passe</label >
                            <input type = "password" class = "form-control" required name = "_password" placeholder = "Password (taper : password)" id = "pass" >
                        </div >

                        <div class = "form group" >
                            <input type = "hidden" name = "_csrf_token" value = "{{ csrf_token('authenticate') }}" >
                            <button type = "submit" class = "btn btn-primary" >Connexion</button >
                        </div >
                    </form >
                </div >
            </div>
        </div >
    {% endblock %}