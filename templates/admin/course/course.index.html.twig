{% extends 'base.html.twig' %}

{% block title %}Course index{% endblock %}

{% block body %}
    <h1>Course index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>SmallDescription</th>
                <th>FullDescription</th>
                <th>Duration</th>
                <th>Price</th>
                <th>CreatedAt</th>
                <th>IsPublished</th>
                <th>Slug</th>
                <th>Image</th>
                <th>Schedule</th>
                <th>Program</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for course in courses %}
            <tr>
                <td>{{ course.id }}</td>
                <td>{{ course.name }}</td>
                <td>{{ course.smallDescription }}</td>
                <td>{{ course.fullDescription }}</td>
                <td>{{ course.duration }}</td>
                <td>{{ course.price }}</td>
                <td>{{ course.createdAt ? course.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ course.isPublished ? 'Yes' : 'No' }}</td>
                <td>{{ course.slug }}</td>
                <td>{{ course.image }}</td>
                <td>{{ course.schedule }}</td>
                <td>{{ course.program }}</td>
                <td>
                    <a href="{{ path('course_show', {'id': course.id}) }}">show</a>
                    <a href="{{ path('course_edit', {'id': course.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('course_new') }}">Create new</a>
{% endblock %}
