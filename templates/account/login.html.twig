{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Inscription{% endblock %}

{% block body %}

<div class="container" style="min-height: 70vh">
    <h2 class="my-4">Identification</h2>
    {% if error %}
        <div class="alert alert danger">Nom d'utilisateur ou mot de passe erronés</div>
    {% endif %}
    <form action="{{ path('login') }}" method="post">
        <div class="form-group">
            <label for="">Votre E‑Mail</label>
            <input type="email" class="form-control" required name="_username" placeholder="E‑Mail" id="mail" value="{{ last_username }}">
        </div>
        <div class="form-group">
            <label for="pass">Votre mot de passe</label>
            <input type="password" class="form-control" required name="_password" placeholder="Password" id="pass">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Connexion</button>
        </div>
    </form>
</div>
{% endblock %}