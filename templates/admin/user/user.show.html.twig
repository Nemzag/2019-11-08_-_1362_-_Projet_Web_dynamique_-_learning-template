{% extends 'base_admin.html.twig' %}

{% block title %}Utilisateur : {{ user.lastName }} {{ user.firstName }}{% endblock %}

{% block main %}
<div class = "courses-area" style = "margin-bottom: 30px;" >

    <div class = "container" >

        <div class = "row align-items-center" >
            <div class = "col-lg-12 col-md-12 col-sm-12 col-xs-12" >

                <div class = "product-payment-inner-st" >

    <h1 class="h1"><strong>Utilisateur : {{ user.lastName }} {{ user.firstName }}</strong></h1>

                    <hr >

                    <table class = "table table-bordered table-striped table-hover gaz-table-show" >
        <tbody>

            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Pseudo‑onyme</th>
                <td>{{ user.userName }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastName }}</td>
            </tr>

            <tr>
                <th>Courriel</th>
                <td><a href="mailto:{{ user.email }}">{{ user.email }}</a></td>
            </tr>

            {#
            <tr>
                <th>Mot de passe</th>
                <td>{{ user.password }}</td>
            </tr>
            #}

            <tr>
                <th>Compte créé le</th>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Compte mise à jour le</th>
                <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Compte désactivé</th>
                <td>{{ user.isDisabled ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ user.role[0] }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td> <img src = "{{ asset('public/img/avatar/') }}{{ user.image }}" alt = "{{ user.username }}" title = "{{ user.username }}" class = "gaz-show-image" ></td>
            </tr>
            <tr>
                <th>Dernière connection le</th>
                <td>{{ user.lastLogAt ? user.lastLogAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_user_index') }}">Retour à la liste</a>

    <a href="{{ path('admin_user_edit', {'id': user.id}) }}">edit</a>

    {#{{ include('user/_delete_form.html.twig') }}#}
{% endblock %}
