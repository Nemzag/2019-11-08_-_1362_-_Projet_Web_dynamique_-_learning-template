{% extends 'base_admin.html.twig' %}

{% block title %}Course{% endblock %}

{% block main %}
    <div class = "courses-area" style = "margin-bottom: 30px;" >

        <div class = "container" >

            <div class = "row align-items-center" >
                <div class = "col-lg-12 col-md-12 col-sm-12 col-xs-12" >

                    <div class = "product-payment-inner-st" >

                        <h1 >Cours : {{ course.name }}</h1 >

                        {{ include('admin/include/alert.info.html.twig') }}

                        <table class = "table table-bordered table-striped table-hover gaz-table-show" >
                            <tbody >
                            <tr >
                                <th >Id</th >
                                <td >{{ course.id }}</td >
                            </tr >
                            <tr >
                                <th >Nomination</th >
                                <td >{{ course.name }}</td >
                            </tr >
                            <tr >
                                <th >Courte&nbsp;déscription</th >
                                <td >{{ course.smallDescription }}</td >
                            </tr >
                            <tr >
                                <th >Longue&nbsp;déscription</th >
                                <td >{{ course.fullDescription | nl2br }}</td >
                            </tr >

                            <!-- Duration & planning -->
                            <tr >
                                <th >Durée</th >
                                <td >{{ course.duration | nl2br }}</td >
                            </tr >
                            <tr >
                                <th >Planning</th >
                                <td >{{ course.schedule | nl2br }}</td >
                            </tr >

                            <!-- Prix format Europe -->
                            <tr >
                                <th >Prix</th >
                                <td >{{ course.price |number_format(2, ',', '.') }}€</td >
                            </tr >
                            <tr >
                                <th >Date&nbsp;de&nbsp;création</th >
                                <td >{{ course.createdAt ? course.createdAt|date('Y-m-d ') : '' }}<br >
                                    <small >{{ course.createdAt ? course.createdAt|date('H\\hi\\ms\\s') : '' }}</small ><br >
                                    <small >{{ course.createdAt ? course.createdAt | localizeddate('none', 'none', null, null, 'EEEE') | capitalize }}</small >
                                </td >
                            </tr >
                            <tr >
                                <th >Visible</th >
                                <td >{{ course.isPublished ? 'Yes' : 'No' }}</td >
                            </tr >
                            <tr >
                                <th >Slug</th >
                                <td >{{ course.slug }}</td >
                            </tr >
                            <tr >
                                <th >Image</th >
                                <td >
                                    <img src = "{{ asset('public/img/section/') }}{{ course.image }}" alt = "{{ course.name }}" class = "gaz-show-image" >
                                </td >
                            </tr >

                            <tr >
                                <th >Program</th >
                                <td >
                                    <a href = "{{  asset('public/pdf/courses/') }}{{ course.program }}" target = "_blank" ><i class = "fas fa-file-pdf" style = "font-size: 3em;" ></i ><br >P.D.F.</a >
                                </td >
                            </tr >
                            </tbody >
                        </table >

                        <!-- Affichage flex triple -->
                        <div class = "row" >
                            <div class = "col-lg-4" >

                                <button class = "btn btn-primary gaz-admin-form-button" >
                                    <a href = "{{ path('course_index') }}" style = "color: white;" >Retour à la liste</a >
                                </button >
                            </div >

                            <div class = "col-lg-4 text-center" >

                                <button class = "btn btn-secondary gaz-admin-form-button" >
                                    <a href = "{{ path('course_edit', {'id': course.id}) }}" >Éditer</a >
                                </button >
                            </div >

                            <div class = "col-lg-4 text-right" >

                                {{ include('admin/course/_delete_form.html.twig') }}
                            </div >

                        </div >

                    </div >
                </div >
            </div >
        </div >
    </div >
{% endblock %}
