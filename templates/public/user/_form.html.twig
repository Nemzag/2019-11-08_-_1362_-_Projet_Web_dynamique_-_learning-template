<div class = "form-group" >

    {# Nomination #}

    {{ form_label(userForm.userName) }}

    {{ form_widget(userForm.userName) }}

</div >

<div class = "form-group" >

    {# Small Description #}

    {{ form_label(userForm.firstName) }}

    {{ form_widget(userForm.firstName) }}

</div >

<div class = "form-group" >

    {# Small Description #}

    {{ form_label(userForm.lastName) }}

    {{ form_widget(userForm.lastName) }}

</div >

<div class = "form-group" >

    {# Email #}
    {{ form_label(userForm.email) }}

    {{ form_widget(userForm.email) }}

</div >

<div class = "form-group" >

    {# Désactivé #}

    {{ form_label(userForm.isDisabled) }}
    {{ form_widget(userForm.isDisabled) }}

</div >

<div class = "form-group" >

        {# Image #}

        {#{{ form_label(userForm.imageFile) }}#}

        <label >Inséré une image <small >(Non obligatoire)</small ></label >
        {{ form_widget(userForm.imageFile) }}

        {# Boucle de affichage si non vide. #}

        {% if user.image is empty %}

        {% else %}

            <small ><label >Image actuel</label ></small ><br >

            <img src = "{{ asset('public/img/avatar/') }}{{ user.image }}" alt = "{{ user.image }}" class = "img-thumbnail" >
        {% endif %}


    </div >

    {{ form_end(userForm) }}
