{% extends 'base_admin.html.twig' %}

{% block title %}Précis de l'inscription{% endblock %}

{% block main %}
    <div class = "container" >

        <div class = "row align-items-center" >

            <div class = "col-lg-12 col-md-12 col-sm-12 col-xs-12" >

                {# Begin Product-Payment #}
                <div class = "product-payment-inner-st" >

                <h1>Précis de l'inscription</h1>

                    <table class = "table table-bordered table-sm table-hover table-striped gaz-table table-de-gazmen gaz-table-show"
                           data-filter = "true"
                           data-info = "false"
                           data-order = '[[ 8, "asc" ]]'
                           data-page-length = "25"
                           data-paging = "true"
                           id = "table"
                           style = "margin-left: 0; width: 100%;" >

                        <thead class = "thead-dark" >
                        </thead>
                        <tbody>

                        <tr>
                            <th class="gaz-table-show-th" >Cours</th>
                            <td>{{ registration.course }}</td>
                        </tr>

                        <tr>
                            <th class="gaz-table-show-th" >Professeur</th>
                            <td>{{ registration.course.professor.firstName | capitalize }} {{ registration.course.professor.lastName | capitalize }}<br>
                                <img src = "{{ asset('public/img/avatar/') }}{{ registration.course.professor.image }}" alt = "{{ registration.course.professor.firstName }}" title = "{{ registration.course.professor.firstName }}" class = "gaz-show-image" ></td>
                        </tr>

                        <tr>
                            <th class="gaz-table-show-th" >Utilisateur</th>
                            <td>{{ registration.user | capitalize }}</td>
                        </tr>

                            <tr>
                                <th class="gaz-table-show-th" >Date de inscription</th>
                                <td>{{ registration.createdAt ? registration.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>

                            <tr>
                                <th class="gaz-table-show-th" >Coût</th>
                                <td>{{ registration.amount | number_format(2, ',', '.') }}€</td>
                            </tr>

                        </tbody>

                    </table>

                    <hr >

                    <button class = "btn btn-primary gaz-admin-form-button" >

                        <a href = "{{ path('admin_registration_index') }}" style = "color: white;" >Retour à la liste</a >

                    </button >

                </div>

            </div>

        </div>

    </div>

{% endblock %}
