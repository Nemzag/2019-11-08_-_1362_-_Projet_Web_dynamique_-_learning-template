{% extends 'base.html.twig' %}

{% block title %}Edit Comment{% endblock %}

{% block main %}

<main class = "container" >

    <br > <br > <br >

    <h2 class = "h4" >Édition du commentaire</h2 >

    {{ form_start(commentForm) }}

    {{ form_widget(commentForm) }}

    <div class = "row justify-content-between" >

        <div class = "col-3" >

            <button class = "btn btn-success col" >{{ button_label|default('Sauvegarder votre appréciation.') }}</button >

        </div >

        {{ form_end(commentForm) }}

        <div class="col-3">

            <button class = "btn btn-info gaz-admin-form-button col" >

                <a href = "{{ path('course_details', {'id': comment.course.id}) }}" style = "color: white;" >Retour à la liste</a >

            </button >

        </div>

        <div class = "col-3" >

            {#{{ include('public/comment/_delete_form.html.twig') }}#}
            <form method="post" action="{{ path('comment_delete', {'id': comment.id}) }}" onsubmit="return confirm('Êtes‑vous sûr de vouloir supprimer ce commentaire ?');">

                <input type="hidden" name="_method" value="DELETE">

                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">

                <button class = "btn btn-primary col" >Supprimer</button>

            </form>

        </div >

    </div >

    {% endblock %}
